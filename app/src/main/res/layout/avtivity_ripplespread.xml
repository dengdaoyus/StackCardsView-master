<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.beyondsw.widget.RippleSpreadView xmlns:RippleWaveView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rippleSpreadView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom|center_horizontal"
            RippleWaveView:rsv_innerAnimDuration="3000"
            RippleWaveView:rsv_innerCircleColor="#7E57C2"
            RippleWaveView:rsv_innerSize="1dp"
            RippleWaveView:rsv_outAnimDuration="3000"
            RippleWaveView:rsv_outSize="240dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:riv_oval="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.beyondsw.widget.WhewView
            android:id="@+id/whenView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="114dp"
            android:layout_height="114dp"
            app:riv_border_width="1dp"
            app:riv_border_color="@android:color/black"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:riv_oval="true"
            android:id="@+id/roundedImageView" />

    </RelativeLayout>

    <Button
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />
</FrameLayout>
